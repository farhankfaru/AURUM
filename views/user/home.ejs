    <style>
        /* Hero Section Complete Styles */
        .hero {
            position: relative;
            height: 100vh;
            overflow: hidden;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.6s ease;
        }

        .hero-background {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 1;
        }

        /* ✅ FIXED: Multiple Image Fallbacks */
        .hero-image {
            width: 100%;
            height: 100%;
            /* Try multiple image paths and fallback to external image */
            background-image: 
                url('/images/luxury_menswear_hero.jpg'),
                url('/images/banner.jpg'),
                url('/luxury_menswear_hero.jpg'),
                url('/banner.jpg'),
                url('https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?w=1600&h=900&fit=crop&crop=faces');
            background-size: cover;
            background-position: center 30%;
            background-repeat: no-repeat;
            background-attachment: fixed;
            /* Fallback gradient if no image loads */
            background-color: #8B7355;
        }

        /* Test if image loads - remove this after confirming it works */
        .hero-image::after {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            color: white;
            font-size: 1rem;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.8);
            z-index: 10;
            pointer-events: none;
        }

        /* Overlay Variations */
        .hero-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 2;
            transition: all 0.6s ease;
        }

        .hero-overlay.dark-overlay {
            background: linear-gradient(135deg, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0.3) 50%, rgba(0,0,0,0.2) 100%);
        }

        .hero-overlay.minimal-clean {
            background: linear-gradient(135deg, rgba(255,255,255,0.7) 0%, rgba(255,255,255,0.5) 50%, rgba(255,255,255,0.3) 100%);
        }

        .hero-overlay.gradient-fade {
            background: linear-gradient(135deg, rgba(139,115,85,0.7) 0%, rgba(160,149,107,0.5) 50%, rgba(212,196,168,0.3) 100%);
        }

        .hero-content {
            position: relative;
            z-index: 3;
            text-align: center;
            color: white;
            max-width: 800px;
            padding: 2rem;
            animation: fadeInUp 1s ease forwards;
        }

        /* Content color variations for different themes */
        .hero.minimal-clean .hero-content {
            color: #2c2c2c;
        }

        .hero.gradient-fade .hero-content {
            color: white;
        }

        .hero-title {
            font-family: 'Playfair Display', serif;
            font-size: clamp(2.5rem, 6vw, 5rem);
            font-weight: 400;
            line-height: 1.2;
            margin-bottom: 1.5rem;
            letter-spacing: 0.02em;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
        }

        .hero-title .title-line {
            display: block;
            animation: slideInUp 0.8s ease forwards;
        }

        .hero-title .title-line:nth-child(2) {
            animation-delay: 0.2s;
        }

        .hero-subtitle {
            font-size: clamp(1rem, 2vw, 1.3rem);
            font-weight: 300;
            line-height: 1.7;
            margin-bottom: 2.5rem;
            opacity: 0.95;
            text-shadow: 1px 1px 2px rgba(0,0,0,0.3);
            animation: fadeIn 1s ease forwards 0.4s;
            animation-fill-mode: both;
        }

        .hero-btn {
            display: inline-flex;
            align-items: center;
            gap: 1rem;
            background: rgba(139, 115, 85, 0.9);
            color: white;
            border: 2px solid rgba(255, 255, 255, 0.3);
            padding: 1.2rem 3rem;
            border-radius: 50px;
            font-size: 1.1rem;
            font-weight: 500;
            letter-spacing: 0.5px;
            transition: all 0.4s ease;
            cursor: pointer;
            backdrop-filter: blur(15px);
            position: relative;
            overflow: hidden;
            text-decoration: none;
            animation: fadeInUp 1s ease forwards 0.6s;
            animation-fill-mode: both;
        }

        /* Button variations for different themes */
        .hero.minimal-clean .hero-btn {
            background: rgba(139, 115, 85, 0.9);
            color: white;
            border-color: rgba(139, 115, 85, 0.6);
        }

        .hero.gradient-fade .hero-btn {
            background: rgba(255, 255, 255, 0.9);
            color: #8B7355;
            border-color: rgba(255, 255, 255, 0.6);
        }

        /* ✅ FIXED: Light sweep effect */
        .hero-btn::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
            transition: left 0.6s ease;
            z-index: 1;
        }

        .hero-btn:hover::before {
            left: 100%;
        }

        .hero-btn span,
        .hero-btn i {
            position: relative;
            z-index: 2;
        }

        .hero-btn:hover {
            background: rgba(255, 255, 255, 0.2);
            border-color: rgba(255, 255, 255, 0.6);
            transform: translateY(-3px);
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.4);
        }

        .hero-btn i {
            transition: transform 0.3s ease;
        }

        .hero-btn:hover i {
            transform: translateX(8px);
        }

        /* ✅ FIXED: Style Selector Buttons */
        .hero-style-selector {
            position: absolute;
            top: 50%;
            right: 2rem;
            transform: translateY(-50%);
            display: flex;
            flex-direction: column;
            gap: 1rem;
            z-index: 4;
        }

        .style-btn {
            background: rgba(255, 255, 255, 0.95);
            color: #8B7355;
            border: 2px solid transparent;
            padding: 1rem 1.8rem;
            border-radius: 30px;
            font-size: 0.9rem;
            font-weight: 600;
            transition: all 0.4s ease;
            cursor: pointer;
            backdrop-filter: blur(15px);
            min-width: 120px;
            letter-spacing: 0.5px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }

        .style-btn:hover {
            background: rgba(139, 115, 85, 0.9);
            color: white;
            transform: translateX(-8px);
            box-shadow: 0 8px 25px rgba(139, 115, 85, 0.4);
        }

        .style-btn.active {
            background: #8B7355;
            color: white;
            border-color: rgba(255, 255, 255, 0.3);
            transform: translateX(-5px);
            box-shadow: 0 8px 25px rgba(139, 115, 85, 0.5);
        }

        /* Animations */
        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(40px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes slideInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
            }
            to {
                opacity: 1;
            }
        }

        /* Responsive Design */
        @media (max-width: 1024px) {
            .hero-style-selector {
                position: static;
                transform: none;
                flex-direction: row;
                justify-content: center;
                margin-top: 2rem;
                padding: 0 2rem;
            }

            .hero-image {
                background-attachment: scroll;
            }
        }

        @media (max-width: 768px) {
            .hero-style-selector {
                gap: 0.8rem;
                flex-wrap: wrap;
            }

            .style-btn {
                padding: 0.8rem 1.2rem;
                font-size: 0.8rem;
                min-width: 90px;
            }

