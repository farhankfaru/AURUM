<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AURUM - Timeless Menswear Collection</title>
    
    <!-- External CSS Links -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Crimson+Text:wght@400;600&family=Playfair+Display:wght@300;400;500;600;700&family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet">
    
    <!-- Complete Hero Section Styles -->
    <style>
        /* Hero Section Complete Styles */
        .hero {
            position: relative;
            height: 100vh;
            overflow: hidden;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.6s ease;
        }
        
        .hero-background {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 1;
        }
        
        /* Multiple Image Fallbacks */
        .hero-image {
            width: 100%;
            height: 100%;
            /* Try multiple image paths and fallback to external image */
            background-image: url('/images/luxury-menswear-hero.jpg'), 
                             url('/images/banner.jpg'), 
                             url('/luxury-menswear-hero.jpg'), 
                             url('/banner.jpg'), 
                             url('https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?w=1600&h=900&fit=crop&crop=faces');
            background-size: cover;
            background-position: center 30%;
            background-repeat: no-repeat;
            background-attachment: fixed;
            /* Fallback gradient if no image loads */
            background-color: #8B7355;
        }
        
        /* Overlay Variations */
        .hero-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 2;
            transition: all 0.6s ease;
        }
        
        .hero-overlay.dark-overlay {
            background: linear-gradient(135deg, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0.3) 50%, rgba(0,0,0,0.2) 100%);
        }
        
        .hero-overlay.minimal-clean {
            background: linear-gradient(135deg, rgba(255,255,255,0.7) 0%, rgba(255,255,255,0.5) 50%, rgba(255,255,255,0.3) 100%);
        }
        
        .hero-overlay.gradient-fade {
            background: linear-gradient(135deg, rgba(139,115,85,0.7) 0%, rgba(160,149,107,0.5) 50%, rgba(212,196,168,0.3) 100%);
        }
        
        .hero-content {
            position: relative;
            z-index: 3;
            text-align: center;
            color: white;
            max-width: 800px;
            padding: 2rem;
            animation: fadeInUp 1s ease forwards;
        }
        
        /* Content color variations for different themes */
        .hero.minimal-clean .hero-content {
            color: #2c2c2c;
        }
        
        .hero.gradient-fade .hero-content {
            color: white;
        }
        
        .hero-title {
            font-family: 'Playfair Display', serif;
            font-size: clamp(2.5rem, 6vw, 5rem);
            font-weight: 400;
            line-height: 1.2;
            margin-bottom: 1.5rem;
            letter-spacing: 0.02em;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
        }
        
        .hero-title .title-line {
            display: block;
            animation: slideInUp 0.8s ease forwards;
        }
        
        .hero-title .title-line:nth-child(2) {
            animation-delay: 0.2s;
        }
        
        .hero-subtitle {
            font-size: clamp(1rem, 2vw, 1.3rem);
            font-weight: 300;
            line-height: 1.7;
            margin-bottom: 2.5rem;
            opacity: 0.95;
            text-shadow: 1px 1px 2px rgba(0,0,0,0.3);
            animation: fadeIn 1s ease forwards 0.4s;
            animation-fill-mode: both;
        }
        
        .hero-btn {
            display: inline-flex;
            align-items: center;
            gap: 1rem;
            background: rgba(139, 115, 85, 0.9);
            color: white;
            border: 2px solid rgba(255, 255, 255, 0.3);
            padding: 1.2rem 3rem;
            border-radius: 50px;
            font-size: 1.1rem;
            font-weight: 500;
            letter-spacing: 0.5px;
            transition: all 0.4s ease;
            cursor: pointer;
            backdrop-filter: blur(15px);
            position: relative;
            overflow: hidden;
            text-decoration: none;
            animation: fadeInUp 1s ease forwards 0.6s;
            animation-fill-mode: both;
        }
        
        /* Button variations for different themes */
        .hero.minimal-clean .hero-btn {
            background: rgba(139, 115, 85, 0.9);
            color: white;
            border-color: rgba(139, 115, 85, 0.6);
        }
        
        .hero.gradient-fade .hero-btn {
            background: rgba(255, 255, 255, 0.9);
            color: #8B7355;
            border-color: rgba(255, 255, 255, 0.6);
        }
        
        /* Light sweep effect */
        .hero-btn::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
            transition: left 0.6s ease;
            z-index: 1;
        }
        
        .hero-btn:hover::before {
            left: 100%;
        }
        
        .hero-btn span,
        .hero-btn i {
            position: relative;
            z-index: 2;
        }
        
        .hero-btn:hover {
            background: rgba(255, 255, 255, 0.2);
            border-color: rgba(255, 255, 255, 0.6);
            transform: translateY(-3px);
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.4);
        }
        
        .hero-btn i {
            transition: transform 0.3s ease;
        }
        
        .hero-btn:hover i {
            transform: translateX(8px);
        }
        
        /* Style Selector Buttons */
        .hero-style-selector {
            position: absolute;
            top: 50%;
            right: 2rem;
            transform: translateY(-50%);
            display: flex;
            flex-direction: column;
            gap: 1rem;
            z-index: 4;
        }
        
        .style-btn {
            background: rgba(255, 255, 255, 0.95);
            color: #8B7355;
            border: 2px solid transparent;
            padding: 1rem 1.8rem;
            border-radius: 30px;
            font-size: 0.9rem;
            font-weight: 600;
            transition: all 0.4s ease;
            cursor: pointer;
            backdrop-filter: blur(15px);
            min-width: 120px;
            letter-spacing: 0.5px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }
        
        .style-btn:hover {
            background: rgba(139, 115, 85, 0.9);
            color: white;
            transform: translateX(-8px);
            box-shadow: 0 8px 25px rgba(139, 115, 85, 0.4);
        }
        
        .style-btn.active {
            background: #8B7355;
            color: white;
            border-color: rgba(255, 255, 255, 0.3);
            transform: translateX(-5px);
            box-shadow: 0 8px 25px rgba(139, 115, 85, 0.5);
        }
        
        /* Animations */
        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(40px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        
        @keyframes slideInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        
        @keyframes fadeIn {
            from {
                opacity: 0;
            }
            to {
                opacity: 1;
            }
        }
        
        /* Categories Section Styles */
        .categories {
            padding: 5rem 0;
            background: linear-gradient(135deg, #f8f6f3 0%, #ebe6e0 100%);
        }
        
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 2rem;
        }
        
        .section-header {
            text-align: center;
            margin-bottom: 4rem;
        }
        
        .section-title {
            font-family: 'Playfair Display', serif;
            font-size: 2.5rem;
            color: #8B7355;
            margin-bottom: 1rem;
        }
        
        .section-line {
            width: 60px;
            height: 3px;
            background: #8B7355;
            margin: 0 auto;
        }
        
        .category-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
            gap: 2rem;
            margin-top: 3rem;
        }
        
        .category-card {
            background: white;
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            transition: all 0.4s ease;
            cursor: pointer;
        }
        
        .category-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 20px 40px rgba(0,0,0,0.2);
        }
        
        .category-image {
            position: relative;
            height: 250px;
            overflow: hidden;
        }
        
        .category-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.4s ease;
        }
        
        .category-card:hover .category-image img {
            transform: scale(1.1);
        }
        
        .category-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(139, 115, 85, 0.7);
            display: flex;
            align-items: center;
            justify-content: center;
            opacity: 0;
            transition: opacity 0.4s ease;
        }
        
        .category-card:hover .category-overlay {
            opacity: 1;
        }
        
        .category-cta {
            color: white;
            font-size: 1.2rem;
            font-weight: 600;
            letter-spacing: 1px;
        }
        
        .category-content {
            padding: 2rem;
            text-align: center;
        }
        
        .category-title {
            font-family: 'Playfair Display', serif;
            font-size: 1.5rem;
            color: #2c2c2c;
            margin-bottom: 1rem;
        }
        
        .category-description {
            color: #666;
            line-height: 1.6;
        }
        
        /* Brand Highlight Section */
        .brand-highlight {
            padding: 5rem 0;
            background: white;
        }
        
        .brand-content {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 4rem;
            align-items: center;
        }
        
        .brand-title {
            font-family: 'Playfair Display', serif;
            font-size: 3rem;
            color: #8B7355;
            margin-bottom: 2rem;
        }
        
        .brand-description {
            font-size: 1.1rem;
            line-height: 1.8;
            color: #666;
            margin-bottom: 2rem;
        }
        
        .brand-btn {
            display: inline-flex;
            align-items: center;
            gap: 1rem;
            background: linear-gradient(135deg, #8B7355, #A0956B);
            color: white;
            padding: 1rem 2rem;
            border-radius: 50px;
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s ease;
        }
        
        .brand-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(139, 115, 85, 0.3);
        }
        
        .brand-image img {
            width: 100%;
            height: 400px;
            object-fit: cover;
            border-radius: 15px;
        }
        
        /* Loading Skeleton */
        .loading-skeleton {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
            gap: 2rem;
        }
        
        .skeleton-card {
            background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
            background-size: 200% 100%;
            animation: shimmer 1.5s infinite;
            height: 350px;
            border-radius: 15px;
        }
        
        @keyframes shimmer {
            0% {
                background-position: -200% 0;
            }
            100% {
                background-position: 200% 0;
            }
        }
        
        /* Responsive Design */
        @media (max-width: 1024px) {
            .hero-style-selector {
                position: static;
                transform: none;
                flex-direction: row;
                justify-content: center;
                margin-top: 2rem;
                padding: 0 2rem;
            }
            
            .hero-image {
                background-attachment: scroll;
            }
            
            .brand-content {
                grid-template-columns: 1fr;
                gap: 3rem;
            }
        }
        
        @media (max-width: 768px) {
            .hero-style-selector {
                gap: 0.8rem;
                flex-wrap: wrap;
            }
            
            .style-btn {
                padding: 0.8rem 1.2rem;
                font-size: 0.8rem;
                min-width: 90px;
            }
            
            .hero-content {
                padding: 1.5rem;
            }
            
            .category-grid {
                grid-template-columns: 1fr;
                gap: 1.5rem;
            }
            
            .loading-skeleton {
                grid-template-columns: 1fr;
            }
        }
        
        @media (max-width: 480px) {
            .hero-style-selector {
                gap: 0.5rem;
            }
            
            .style-btn {
                padding: 0.6rem 1rem;
                font-size: 0.75rem;
                min-width: 80px;
            }
        }
        
        /* Accessibility */
        @media (prefers-reduced-motion: reduce) {
            .hero-image {
                background-attachment: scroll;
            }
            
            * {
                animation-duration: 0.01ms !important;
                animation-iteration-count: 1 !important;
                transition-duration: 0.01ms !important;
            }
        }
    </style>
</head>

<body class="light-theme">
<%- include("../partials/user/header") %>



    <!-- Complete Hero Section -->
    <section class="hero dark-overlay" id="home">
        <!-- Style Variations Selector -->
        <div class="hero-style-selector">
            <button class="style-btn active" data-style="dark-overlay">Classic</button>
            <button class="style-btn" data-style="minimal-clean">Minimal</button>
            <button class="style-btn" data-style="gradient-fade">Elegant</button>
        </div>
        
        <!-- Hero Background -->
        <div class="hero-background">
            <div class="hero-image"></div>
        </div>
        <div class="hero-overlay dark-overlay"></div>
        
        <!-- Hero Content -->
        <div class="hero-content">
            <div class="hero-text">
                <h1 class="hero-title">
                    <span class="title-line">Welcome to</span>
                    <span class="title-line">AURUM</span>
                </h1>
                <p class="hero-subtitle">Experience the timeless elegance of old money style. Where heritage meets luxury in every thread, crafted for those who appreciate the finest things in life.</p>
                <button class="hero-btn" onclick="scrollToSection('collection')">
                    <span>Discover Collections</span>
                    <i class="fas fa-arrow-right"></i>
                </button>
            </div>
        </div>
    </section>

    <!-- Categories Section -->
    <section class="categories" id="collection">
        <div class="container">
            <div class="section-header">
                <h2 class="section-title">Explore by Category</h2>
                <div class="section-line"></div>
            </div>
            
            <!-- Dynamic category loading with loading skeleton -->
            <div class="category-grid" id="categoryGrid">
                <!-- Loading skeleton -->
                <div class="loading-skeleton">
                    <div class="skeleton-card"></div>
                    <div class="skeleton-card"></div>
                    <div class="skeleton-card"></div>
                </div>
            </div>
        </div>
    </section>

    <!-- Brand Highlight Section -->
    <section class="brand-highlight">
        <div class="container">
            <div class="brand-content">
                <div class="brand-text">
                    <h2 class="brand-title">AURUM</h2>
                    <p class="brand-description">Experience the epitome of refined menswear with AURUM's exclusive collection. Each piece embodies timeless sophistication, crafted from the finest materials and tailored to perfection. Discover clothing that transcends trends and defines true elegance.</p>
                    <button class="brand-btn" onclick="scrollToSection('collection')">
                        <span>Explore Collections</span>
                        <i class="fas fa-arrow-right"></i>
                    </button>
                </div>
                <div class="brand-image">
                    <img src="https://images.unsplash.com/photo-1617019114583-affb34d1b3cd?w=600&h=800&fit=crop" alt="AURUM Collection" loading="lazy">
                </div>
            </div>
        </div>
    </section>

    <!-- Complete JavaScript with All Functions -->
    <script>
        // Smooth scroll function
        function scrollToSection(sectionId) {
            const section = document.getElementById(sectionId);
            if (section) {
                const headerHeight = document.querySelector('.header')?.offsetHeight || 80;
                const targetPosition = section.offsetTop - headerHeight;
                
                window.scrollTo({
                    top: targetPosition,
                    behavior: 'smooth'
                });
            }
        }

        // Style Switcher Functionality
        document.addEventListener('DOMContentLoaded', function() {
            // Style switcher
            document.querySelectorAll('.style-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    // Remove active class from all buttons
                    document.querySelectorAll('.style-btn').forEach(b => b.classList.remove('active'));
                    
                    // Add active class to clicked button
                    this.classList.add('active');
                    
                    // Get the style data
                    const style = this.getAttribute('data-style');
                    
                    // Update hero section classes
                    const heroSection = document.querySelector('.hero');
                    const heroOverlay = document.querySelector('.hero-overlay');
                    
                    // Remove all style classes
                    heroSection.classList.remove('dark-overlay', 'minimal-clean', 'gradient-fade');
                    heroOverlay.classList.remove('dark-overlay', 'minimal-clean', 'gradient-fade');
                    
                    // Add new style class
                    heroSection.classList.add(style);
                    heroOverlay.classList.add(style);
                    
                    console.log('Style switched to:', style); // Debug log
                });
            });
            
            // Load categories from admin
            loadCategories();
        });

        // Load categories from admin via Fetch API
        async function loadCategories() {
            try {
                const response = await fetch('/api/categories/active', {
                    method: 'GET',
                    headers: { 'Accept': 'application/json' }
                });

                if (response.ok) {
                    const data = await response.json();
                    if (data.success && data.categories.length > 0) {
                        renderCategories(data.categories);
                    } else {
                        renderDefaultCategories();
                    }
                } else {
                    renderDefaultCategories();
                }
            } catch (error) {
                console.error('Failed to load categories:', error);
                renderDefaultCategories();
            }
        }

        function renderCategories(categories) {
            const categoryGrid = document.getElementById('categoryGrid');
            
            categoryGrid.innerHTML = categories.slice(0, 3).map(category => `
                <div class="category-card" onclick="exploreCategory('${category.categoryname}')">
                    <div class="category-image">
                        <img src="https://images.unsplash.com/photo-1594938298603-c8148c4dae35?w=400&h=500&fit=crop&crop=center" alt="${category.categoryname}" loading="lazy">
                        <div class="category-overlay">
                            <span class="category-cta">Explore</span>
                        </div>
                    </div>
                    <div class="category-content">
                        <h3 class="category-title">${category.categoryname}</h3>
                        <p class="category-description">${category.description}</p>
                    </div>
                </div>
            `).join('');
        }

        function renderDefaultCategories() {
            const categoryGrid = document.getElementById('categoryGrid');
            
            categoryGrid.innerHTML = `
                <div class="category-card" onclick="exploreCategory('Classic Suits')">
                    <div class="category-image">
                        <img src="https://images.unsplash.com/photo-1594938298603-c8148c4dae35?w=400&h=500&fit=crop&crop=center" alt="Classic Suits" loading="lazy">
                        <div class="category-overlay">
                            <span class="category-cta">Explore</span>
                        </div>
                    </div>
                    <div class="category-content">
                        <h3 class="category-title">Classic Suits</h3>
                        <p class="category-description">Impeccably tailored suits crafted from premium fabrics for the discerning gentleman</p>
                    </div>
                </div>
                <div class="category-card" onclick="exploreCategory('Polos & Shirts')">
                    <div class="category-image">
                        <img src="https://images.unsplash.com/photo-1489987707025-afc232f7ea0f?w=400&h=500&fit=crop&crop=center" alt="Polos & Shirts" loading="lazy">
                        <div class="category-overlay">
                            <span class="category-cta">Explore</span>
                        </div>
                    </div>
                    <div class="category-content">
                        <h3 class="category-title">Polos & Shirts</h3>
                        <p class="category-description">Premium cotton and linen essentials perfect for refined casual elegance</p>
                    </div>
                </div>
                <div class="category-card" onclick="exploreCategory('Casual Wear')">
                    <div class="category-image">
                        <img src="https://images.unsplash.com/photo-1506629905138-d3eec3dadcd8?w=400&h=500&fit=crop&crop=center" alt="Casual Wear" loading="lazy">
                        <div class="category-overlay">
                            <span class="category-cta">Explore</span>
                        </div>
                    </div>
                    <div class="category-content">
                        <h3 class="category-title">Casual Wear</h3>
                        <p class="category-description">Sophisticated leisure wear that maintains elegance in every setting</p>
                    </div>
                </div>
            `;
        }

        // Category exploration
        function exploreCategory(categoryName) {
            alert(`Exploring ${categoryName} category - this will navigate to category page when products are implemented.`);
        }

        // Fade in animation on scroll
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('fade-in');
                }
            });
        }, observerOptions);

        // Observe elements for fade-in animation
        document.querySelectorAll('.category-card').forEach(el => {
            observer.observe(el);
        });
    </script>

   <%- include("../partials/user/footer") %>

</body>
