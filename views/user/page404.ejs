<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>404 - Page Not Found</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #2d3748;
            overflow-x: hidden;
        }

        .container {
            max-width: 600px;
            width: 90%;
            text-align: center;
            padding: 2rem;
        }

        .error-content {
            background: #ffffff;
            border-radius: 16px;
            padding: 4rem 3rem;
            box-shadow: 0 25px 50px rgba(0, 0, 0, 0.15);
            border: 1px solid rgba(255, 255, 255, 0.2);
            position: relative;
            overflow: hidden;
        }

        .error-content::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, #3182ce, #4299e1, #63b3ed);
        }

        /* Error Animation */
        .error-animation {
            margin-bottom: 2.5rem;
        }

        .error-code {
            font-size: 7rem;
            font-weight: 800;
            color: #3182ce;
            margin-bottom: 1rem;
            text-shadow: 0 4px 8px rgba(49, 130, 206, 0.2);
            animation: float 3s ease-in-out infinite;
            letter-spacing: -0.05em;
        }

        .error-text {
            font-size: 1.75rem;
            color: #4a5568;
            font-weight: 600;
            margin-bottom: 1rem;
            letter-spacing: -0.025em;
        }

        /* Message Section */
        .message {
            margin-bottom: 3rem;
        }

        .message h2 {
            font-size: 1.375rem;
            color: #2d3748;
            margin-bottom: 1rem;
            font-weight: 600;
            line-height: 1.4;
        }

        .message p {
            font-size: 1rem;
            color: #718096;
            line-height: 1.6;
            max-width: 450px;
            margin: 0 auto;
        }

        /* Home Button */
        .home-button {
            display: inline-flex;
            align-items: center;
            gap: 0.75rem;
            padding: 16px 32px;
            background: linear-gradient(135deg, #3182ce 0%, #4299e1 100%);
            color: white;
            border: none;
            border-radius: 12px;
            font-size: 1.125rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            text-decoration: none;
            box-shadow: 0 4px 12px rgba(49, 130, 206, 0.3);
            position: relative;
            overflow: hidden;
        }

        .home-button::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
            transition: left 0.5s;
        }

        .home-button:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(49, 130, 206, 0.4);
            background: linear-gradient(135deg, #2c5aa0 0%, #3182ce 100%);
        }

        .home-button:hover::before {
            left: 100%;
        }

        .home-button:active {
            transform: translateY(0);
        }

        .home-button:disabled {
            opacity: 0.7;
            cursor: not-allowed;
            transform: none;
        }

        .home-icon {
            font-size: 1.25rem;
            transition: transform 0.3s ease;
        }

        .home-button:hover .home-icon {
            transform: scale(1.1);
        }

        /* Suggestions */
        .suggestions {
            margin-top: 3rem;
            padding-top: 2rem;
            border-top: 1px solid #e2e8f0;
        }

        .suggestions h3 {
            font-size: 1.125rem;
            color: #4a5568;
            margin-bottom: 1.5rem;
            font-weight: 600;
        }

        .suggestions-list {
            list-style: none;
            display: flex;
            gap: 1.5rem;
            justify-content: center;
            flex-wrap: wrap;
        }

        .suggestions-list li {
            margin: 0;
        }

        .suggestion-link {
            color: #3182ce;
            text-decoration: none;
            font-weight: 500;
            padding: 0.75rem 1.25rem;
            border-radius: 8px;
            transition: all 0.3s ease;
            font-size: 0.9rem;
            border: 1px solid transparent;
        }

        .suggestion-link:hover {
            background: #ebf8ff;
            color: #2c5aa0;
            border-color: #bee3f8;
        }

        /* Animations */
        @keyframes float {
            0%, 100% {
                transform: translateY(0px);
            }
            50% {
                transform: translateY(-10px);
            }
        }

        @keyframes slideInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .error-content > * {
            animation: slideInUp 0.6s ease forwards;
        }

        .error-animation {
            animation-delay: 0.1s;
        }

        .message {
            animation-delay: 0.2s;
        }

        .home-button {
            animation-delay: 0.3s;
        }

        .suggestions {
            animation-delay: 0.4s;
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .error-code {
                font-size: 5rem;
            }
            
            .error-text {
                font-size: 1.5rem;
            }
            
            .error-content {
                padding: 3rem 2rem;
            }
            
            .home-button {
                width: 100%;
                max-width: 280px;
                justify-content: center;
            }
            
            .suggestions-list {
                flex-direction: column;
                align-items: center;
                gap: 1rem;
            }
        }

        @media (max-width: 480px) {
            .container {
                padding: 1rem;
            }
            
            .error-code {
                font-size: 4rem;
            }
            
            .error-content {
                padding: 2.5rem 1.5rem;
            }
            
            .message h2 {
                font-size: 1.25rem;
            }
            
            .message p {
                font-size: 0.95rem;
            }

            .home-button {
                font-size: 1rem;
                padding: 14px 28px;
            }
        }

        /* Focus states for accessibility */
        .home-button:focus,
        .suggestion-link:focus {
            outline: 2px solid #4299e1;
            outline-offset: 2px;
        }

        /* Loading state */
        .loading {
            background: linear-gradient(135deg, #a0aec0 0%, #cbd5e0 100%);
            pointer-events: none;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="error-content">
            <div class="error-animation">
                <div class="error-code">404</div>
                <div class="error-text">Page Not Found</div>
            </div>
            
            <div class="message">
                <h2>We can't seem to find the page you're looking for</h2>
                <p>The page you requested might have been moved, deleted, or the URL was entered incorrectly. Don't worry, it happens to the best of us.</p>
            </div>
            
            <button id="homeBtn" class="home-button">
                <span class="home-icon">üè†</span>
                Back to Home
            </button>
            
            <div class="suggestions">
                <h3>Here are some helpful links:</h3>
                <ul class="suggestions-list">
                    <li><a href="/" class="suggestion-link">Homepage</a></li>
                    <li><a href="/about" class="suggestion-link">About Us</a></li>
                    <li><a href="/contact" class="suggestion-link">Contact</a></li>
                    <li><a href="/help" class="suggestion-link">Help Center</a></li>
                </ul>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const homeBtn = document.getElementById('homeBtn');
            
            // Home button functionality
            homeBtn.addEventListener('click', function() {
                // Add loading state
                homeBtn.classList.add('loading');
                homeBtn.innerHTML = '<span class="home-icon">‚è≥</span> Loading...';
                homeBtn.disabled = true;
                
                // Simulate loading and redirect
                setTimeout(() => {
                    window.location.href = '/';
                }, 800);
            });
            
            // Keyboard navigation
            document.addEventListener('keydown', function(e) {
                if (e.key === 'Enter' || e.key === ' ') {
                    if (document.activeElement === homeBtn) {
                        e.preventDefault();
                        homeBtn.click();
                    }
                } else if (e.key === 'h' || e.key === 'H') {
                    homeBtn.focus();
                    homeBtn.click();
                } else if (e.key === 'Escape') {
                    if (window.history.length > 1) {
                        window.history.back();
                    } else {
                        window.location.href = '/';
                    }
                }
            });
            
            // Enhanced accessibility
            homeBtn.addEventListener('keydown', function(e) {
                if (e.key === 'Enter' || e.key === ' ') {
                    e.preventDefault();
                    this.click();
                }
            });
            
            // Performance optimization
            const prefetchLink = document.createElement('link');
            prefetchLink.rel = 'prefetch';
            prefetchLink.href = '/';
            document.head.appendChild(prefetchLink);
            
            // Subtle interaction feedback
            const errorCode = document.querySelector('.error-code');
            let hoverCount = 0;
            
            errorCode.addEventListener('mouseenter', function() {
                hoverCount++;
                if (hoverCount === 3) {
                    this.style.color = '#2c5aa0';
                    setTimeout(() => {
                        this.style.color = '#3182ce';
                    }, 1000);
                }
            });
            
            console.log('üöÄ Professional 404 Page Loaded\nüí° Press "H" to go home or "Escape" to go back');
        });

        // Smooth scroll behavior for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth'
                    });
                }
            });
        });
    </script>
</body>
</html>
