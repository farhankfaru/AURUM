<%- include('../partials/admin/header', { 
    title: 'Dashboard - AURUM Admin',
    pageTitle: 'Dashboard',
    currentPage: 'dashboard'
}) %>

<style>
    /* Dashboard Specific Styles */
    .dashboard-container {
        padding: 2rem;
        max-width: 1400px;
        margin: 0 auto;
    }

    .welcome-section {
        background: linear-gradient(135deg, var(--aurum-gold), #A0956B);
        color: white;
        padding: 3rem;
        border-radius: 15px;
        text-align: center;
        margin-bottom: 2rem;
        box-shadow: 0 10px 30px rgba(139, 115, 85, 0.3);
        position: relative;
        overflow: hidden;
    }

    .welcome-section::before {
        content: '';
        position: absolute;
        top: -50%;
        right: -50%;
        width: 100%;
        height: 100%;
        background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
        pointer-events: none;
    }

    .welcome-content {
        position: relative;
        z-index: 2;
    }

    .welcome-title {
        font-family: 'Playfair Display', serif;
        font-size: 2.5rem;
        margin-bottom: 1rem;
        font-weight: 700;
    }

    .welcome-subtitle {
        font-size: 1.2rem;
        opacity: 0.9;
        margin-bottom: 0.5rem;
    }

    .admin-name {
        font-weight: 600;
        font-size: 1.1rem;
        margin-top: 1rem;
    }

    .coming-soon-section {
        background: white;
        padding: 3rem;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.1);
        text-align: center;
        margin-bottom: 2rem;
    }

    .coming-soon-icon {
        font-size: 4rem;
        color: var(--aurum-gold);
        margin-bottom: 1.5rem;
    }

    .coming-soon-title {
        font-size: 1.8rem;
        font-weight: 600;
        color: var(--dark-text);
        margin-bottom: 1rem;
    }

    .coming-soon-text {
        color: var(--light-text);
        font-size: 1rem;
        line-height: 1.6;
        max-width: 600px;
        margin: 0 auto 2rem;
    }

    .feature-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1.5rem;
        margin-top: 2rem;
    }

    .feature-card {
        background: white;
        padding: 2rem;
        border-radius: 12px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        text-align: center;
        transition: all 0.3s ease;
        border: 1px solid var(--border-color);
    }

    .feature-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 25px rgba(139, 115, 85, 0.15);
    }

    .feature-icon {
        font-size: 2.5rem;
        color: var(--aurum-gold);
        margin-bottom: 1rem;
    }

    .feature-title {
        font-size: 1.2rem;
        font-weight: 600;
        color: var(--dark-text);
        margin-bottom: 0.5rem;
    }

    .feature-desc {
        color: var(--light-text);
        font-size: 0.9rem;
        line-height: 1.5;
    }

    .status-badge {
        display: inline-block;
        padding: 0.25rem 0.75rem;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 500;
        margin-top: 0.5rem;
    }

    .status-active {
        background: #dcfce7;
        color: #166534;
    }

    .status-coming-soon {
        background: #fef3c7;
        color: #d97706;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
        .dashboard-container {
            padding: 1rem;
        }

        .welcome-section {
            padding: 2rem 1.5rem;
        }

        .welcome-title {
            font-size: 2rem;
        }

        .welcome-subtitle {
            font-size: 1rem;
        }

        .coming-soon-section {
            padding: 2rem 1.5rem;
        }

        .coming-soon-title {
            font-size: 1.5rem;
        }
    }
</style>

<div class="dashboard-container">
    <!-- Welcome Section -->
    <div class="welcome-section">
        <div class="welcome-content">
            <h1 class="welcome-title">Welcome to AURUM Admin</h1>
            <p class="welcome-subtitle">Your premium vintage clothing management dashboard</p>
            <div class="admin-name">
                <i class="fas fa-user-shield"></i>
                Hello, <%= admin.name || admin.email %>
            </div>
        </div>
    </div>

    <!-- Coming Soon Section -->
    <div class="coming-soon-section">
        <div class="coming-soon-icon">
            <i class="fas fa-tools"></i>
        </div>
        <h2 class="coming-soon-title">Dashboard Features Coming Soon</h2>
        <p class="coming-soon-text">
            We're working hard to bring you comprehensive analytics, insights, and management tools. 
            In the meantime, you can access all your current management features through the sidebar navigation.
        </p>
    </div>

    <!-- Available Features -->
    <div class="feature-grid">
        <div class="feature-card">
            <div class="feature-icon">
                <i class="fas fa-users"></i>
            </div>
            <h3 class="feature-title">Customer Management</h3>
            <p class="feature-desc">Manage customer accounts, view profiles, and handle user permissions</p>
            <span class="status-badge status-active">Available</span>
        </div>

        <div class="feature-card">
            <div class="feature-icon">
                <i class="fas fa-tags"></i>
            </div>
            <h3 class="feature-title">Category Management</h3>
            <p class="feature-desc">Organize products into categories and manage category-specific offers</p>
            <span class="status-badge status-active">Available</span>
        </div>

        <div class="feature-card">
            <div class="feature-icon">
                <i class="fas fa-chart-line"></i>
            </div>
            <h3 class="feature-title">Analytics & Reports</h3>
            <p class="feature-desc">Comprehensive insights into sales, customers, and business performance</p>
            <span class="status-badge status-coming-soon">Coming Soon</span>
        </div>

        <div class="feature-card">
            <div class="feature-icon">
                <i class="fas fa-shopping-cart"></i>
            </div>
            <h3 class="feature-title">Order Management</h3>
            <p class="feature-desc">Track orders, manage fulfillment, and handle customer requests</p>
            <span class="status-badge status-coming-soon">Coming Soon</span>
        </div>

        <div class="feature-card">
            <div class="feature-icon">
                <i class="fas fa-box"></i>
            </div>
            <h3 class="feature-title">Product Management</h3>
            <p class="feature-desc">Add, edit, and manage your vintage clothing inventory</p>
            <span class="status-badge status-coming-soon">Coming Soon</span>
        </div>

        <div class="feature-card">
            <div class="feature-icon">
                <i class="fas fa-percentage"></i>
            </div>
            <h3 class="feature-title">Promotions & Coupons</h3>
            <p class="feature-desc">Create and manage discount codes and promotional campaigns</p>
            <span class="status-badge status-coming-soon">Coming Soon</span>
        </div>
    </div>
</div>

</main>
</body>
</html>
